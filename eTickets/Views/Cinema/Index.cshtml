@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row">
    <div class="col-md-10 offset-md-1">

        <div class="card shadow-lg border-0 mb-4" style="border-radius: 12px;">
            <div class="card-body p-0">

                <table class="table mb-0 align-middle" style="border-radius: 12px; overflow: hidden;">

                    <thead style="background-color: #eef3f8;">
                        <tr class="text-center" style="color: #4a4a4a;">
                            <th>@Html.DisplayNameFor(model => model.Logo)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th style="width: 260px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody style="background-color: #fafbfc;">
                        @foreach (var cinema in Model)
                        {
                            <tr class="border-bottom" style="height: 95px;">
                                <td class="text-center">
                                    <img class="rounded-circle shadow-sm"
                                         src="https://thumbs.dreamstime.com/b/movie-cinema-logo-template-vector-icon-illustration-design-theater-video-logo-concept-generative-ai-movie-cinema-logo-template-309548409.jpg"
                                         alt="@cinema.Name"
                                         style="width: 100px; height: 100px; object-fit: cover;" />
                                </td>

                                <td class="text-center" style=" color: #2d2d2d; font-weight: 500;">
                                    @cinema.Name
                                </td>

                                <td class="text-center" style="color: #555;">
                                    @cinema.Description
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center align-items-center gap-2">

                                        <a class="btn btn-sm text-white"
                                           style="background-color: #4a90e2; border-radius: 6px;"
                                           asp-action="Edit" asp-route-id="@cinema.Id">
                                            <i class="bi bi-pencil-square"></i>
                                            <span class="ms-1">Edit</span>
                                        </a>

                                        <a class="btn btn-sm text-white"
                                           style="background-color: #e74c3c; border-radius: 6px;"
                                           asp-action="Delete" asp-route-id="@cinema.Id">
                                            <i class="bi bi-trash"></i>
                                            <span class="ms-1">Delete</span>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>

    </div>
</div>
