@model Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">

            <!-- Enhanced Card with better shadow and animation -->
            <div class="card border-0 shadow-lg hover-shadow transition-all">

                <!-- Modern Header with gradient -->
                <div class="card-header bg-gradient-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <h4 class="mb-0 fw-semibold">
                            Delete Actor Confirmation
                        </h4>
                    </div>
                    <small class="opacity-75">Permanent action - cannot be undone</small>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4 p-md-5">

                    <div class="row g-4 align-items-start">

                        <!-- Profile Image with better styling -->
                        <div class="col-md-5">
                            <div class="position-relative">
                                <img src="@Model.ProfilePictureURL"
                                     class="img-fluid rounded-3 shadow-sm"
                                     style="height: 280px; width: 100%; object-fit: cover;"
                                     alt="Profile picture of @Model.FullName" />
                                <div class="position-absolute top-0 start-0 w-100 h-100 rounded-3 border-3 border-danger opacity-10"></div>
                            </div>
                            <div class="mt-3 text-center">
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-person me-1"></i>Actor Profile
                                </span>
                            </div>
                        </div>

                        <!-- Details Section -->
                        <div class="col-md-7">

                            <!-- Actor Name -->
                            <div class="mb-4">
                                <h3 class="fw-bold text-dark mb-1">@Model.FullName</h3>
                                <div class="text-muted small">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Actor Details
                                </div>
                            </div>

                            <!-- Bio Section -->
                            <div class="mb-4">
                                <h6 class="text-uppercase text-muted small fw-bold mb-2">Biography</h6>
                                <div class="p-3 bg-light rounded-2 border-start border-3 border-danger">
                                    <p class="mb-0 text-dark">
                                        @Model.Bio
                                    </p>
                                </div>
                            </div>

                            <!-- Warning Alert - Enhanced -->
                            <div class="alert alert-danger border-danger bg-danger-soft mb-4">
                                <div class="d-flex">
                                    <i class="bi bi-shield-exclamation fs-4 me-3"></i>
                                    <div>
                                        <h6 class="alert-heading fw-semibold mb-1">Critical Warning</h6>
                                        <p class="mb-0 small">
                                            Deleting this actor will permanently remove all associated data from the system.
                                            This action cannot be reversed.
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Form -->
                            <form asp-action="Delete" method="post" class="mt-4">
                                <input type="hidden" asp-for="Id" />

                                <div class="d-flex flex-column flex-sm-row justify-content-end gap-3">
                                    <a asp-action="Index"
                                       class="btn btn-outline-secondary px-4 py-2 d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-arrow-left"></i>
                                        <span>Cancel & Return</span>
                                    </a>

                                    <button type="submit"
                                            class="btn btn-danger px-5 py-2 d-flex align-items-center justify-content-center gap-2"
                                            onclick="return confirm('Are you absolutely sure you want to delete @Model.FullName?')">
                                        <i class="bi bi-trash3"></i>
                                        <span>Confirm Delete</span>
                                    </button>
                                </div>

                                <!-- Additional confirmation message -->
                                <div class="mt-3 text-end">
                                    <small class="text-muted">
                                        <i class="bi bi-clock-history me-1"></i>
                                        Action required within session
                                    </small>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>

                <!-- Footer with additional info -->
                <div class="card-footer bg-light border-top py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>
                                Action requested on @DateTime.Now.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                        <div class="col-auto">
                            <small class="text-danger">
                                <i class="bi bi-lock-fill me-1"></i>
                                Secure deletion process
                            </small>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<!-- Add custom styles for enhanced appearance -->
<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%);
    }

    .bg-danger-soft {
        background-color: rgba(220, 53, 69, 0.08);
    }

    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1.5rem rgba(0,0,0,.15) !important;
        }

    .border-danger {
        border-color: #dc3545 !important;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .border-start {
        border-left-width: 4px !important;
    }
</style>